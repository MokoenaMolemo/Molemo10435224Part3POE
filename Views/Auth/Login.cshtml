@model ClaimsManagementApp.Models.LoginViewModel

@{
    var role = ViewBag.Role as string ?? "";
    var title = !string.IsNullOrEmpty(role) ? $"Login as {role}" : "Login";
    ViewData["Title"] = title;
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h2 class="text-center">@title</h2>
                @if (!string.IsNullOrEmpty(role))
                {
                    <p class="text-center text-muted">Access your @role portal</p>
                }
                else
                {
                    <p class="text-center text-muted">Login to access your portal</p>
                }
            </div>
            <div class="card-body">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <div class="form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label"></label>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </div>
                </form>

                <!-- Show register link only for general login, not for specific role logins -->
                @if (string.IsNullOrEmpty(role))
                {
                    <div class="text-center mt-3">
                        <p>Are you a Lecturer? <a asp-action="Register" class="text-decoration-none">Register here</a></p>
                    </div>
                }
                else
                {
                    <div class="text-center mt-3">
                        <p><a asp-action="Login" class="text-decoration-none">← Back to all portals</a></p>
                    </div>
                }

                <!-- Default Login Credentials -->
                <div class="mt-4 p-3 bg-light rounded">
                    <h6>Default Login Credentials:</h6>
                    <small class="text-muted">
                        <strong>Coordinator:</strong> coordinator / coord123<br>
                        <strong>HR:</strong> hr / hr123<br>
                        <strong>Manager:</strong> manager / manager123<br>
                        <strong>Lecturer:</strong> Register first, then login
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
