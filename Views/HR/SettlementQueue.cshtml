@model List<Claim>
@{
    ViewData["Title"] = "Settlement Queue";
}

<div class="container">
    <h2><i class="fas fa-hand-holding-usd me-2"></i>Settlement Queue</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header bg-warning text-white">
            <h5 class="card-title mb-0">
                <i class="fas fa-clock me-2"></i>Claims Ready for Settlement (@Model.Count)
            </h5>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-4">
                    <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                    <h4 class="text-success">All Caught Up!</h4>
                    <p class="text-muted">No claims pending settlement.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-warning">
                            <tr>
                                <th>Claim ID</th>
                                <th>Lecturer</th>
                                <th>Hours</th>
                                <th>Rate</th>
                                <th>Total Amount</th>
                                <th>Submitted</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model.OrderByDescending(c => c.SubmissionDate))
                            {
                                <tr>
                                    <td><strong>#@claim.Id</strong></td>
                                    <td>@claim.LecturerName</td>
                                    <td>@claim.HoursWorked</td>
                                    <td>R @claim.HourlyRate.ToString("N2")</td>
                                    <td><strong class="text-success">R @claim.TotalAmount.ToString("N2")</strong></td>
                                    <td>@claim.SubmissionDate.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <a href="@Url.Action("SettleClaim", new { id = claim.Id })"
                                           class="btn btn-success btn-sm">
                                            <i class="fas fa-check me-1"></i>Settle
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Dashboard")" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
        </a>
    </div>
</div>