@model List<Claim>
@{
    ViewData["Title"] = "Settled Claims";
}

<div class="container">
    <h2><i class="fas fa-check-circle me-2"></i>Settled Claims</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header bg-success text-white">
            <h5 class="card-title mb-0">
                <i class="fas fa-history me-2"></i>Settled Claims History (@Model.Count)
            </h5>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-4">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">No Settled Claims</h4>
                    <p class="text-muted">No claims have been settled yet.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-success">
                            <tr>
                                <th>Claim ID</th>
                                <th>Lecturer</th>
                                <th>Hours</th>
                                <th>Rate</th>
                                <th>Total Amount</th>
                                <th>Submitted</th>
                                <th>Settled</th>
                                <th>Payment Reference</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model.OrderByDescending(c => c.SettlementDate))
                            {
                                <tr>
                                    <td><strong>#@claim.Id</strong></td>
                                    <td>@claim.LecturerName</td>
                                    <td>@claim.HoursWorked</td>
                                    <td>R @claim.HourlyRate.ToString("N2")</td>
                                    <td><strong class="text-success">R @claim.TotalAmount.ToString("N2")</strong></td>
                                    <td>@claim.SubmissionDate.ToString("dd/MM/yyyy")</td>
                                    <td>@claim.SettlementDate?.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <span class="badge bg-info">@claim.PaymentReference</span>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("SettleClaim", new { id = claim.Id })"
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye me-1"></i>View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Dashboard")" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
        </a>
        <a href="@Url.Action("GeneratePaymentReport")" class="btn btn-warning">
            <i class="fas fa-download me-1"></i>Download Payment Report
        </a>
    </div>
</div>