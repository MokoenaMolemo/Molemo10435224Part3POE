@model ClaimsManagementApp.Models.SettlementViewModel
@{
    ViewData["Title"] = "Settle Claim";
}

<div class="container">
    <h2><i class="fas fa-hand-holding-usd me-2"></i>Settle Claim #@Model.Claim.Id</h2>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Claim Details -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-file-invoice me-2"></i>Claim Details
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <p><strong>Lecturer:</strong><br>@Model.Claim.LecturerName</p>
                            <p><strong>Hours Worked:</strong><br>@Model.Claim.HoursWorked</p>
                        </div>
                        <div class="col-6">
                            <p><strong>Hourly Rate:</strong><br>R @Model.Claim.HourlyRate.ToString("N2")</p>
                            <p><strong>Total Amount:</strong><br><span class="h5 text-success">R @Model.Claim.TotalAmount.ToString("N2")</span></p>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Claim.AdditionalNotes))
                    {
                        <p><strong>Notes:</strong><br>@Model.Claim.AdditionalNotes</p>
                    }
                    <p><strong>Submitted:</strong> @Model.Claim.SubmissionDate.ToString("dd/MM/yyyy HH:mm")</p>
                    <p>
                        <strong>Current Status:</strong>
                        <span class="badge bg-success">@Model.Claim.Status</span>
                    </p>
                </div>
            </div>
        </div>

        <!-- Settlement Form -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-check-circle me-2"></i>Settlement Details
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="SettleClaim" method="post" id="settlementForm" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="SettlementRequest.ClaimId" value="@Model.Claim.Id" />

                        <div class="mb-3">
                            <label asp-for="SettlementRequest.PaymentReference" class="form-label">
                                <i class="fas fa-receipt me-1"></i>Payment Reference *
                            </label>
                            <input asp-for="SettlementRequest.PaymentReference" class="form-control"
                                   id="paymentReference"
                                   placeholder="e.g., PAY-2024-001, EFT123456" />
                            <span asp-validation-for="SettlementRequest.PaymentReference" class="text-danger"></span>
                            <div class="form-text">Enter a unique payment reference number</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SettlementRequest.SettlementNotes" class="form-label">
                                <i class="fas fa-sticky-note me-1"></i>Settlement Notes *
                            </label>
                            <textarea asp-for="SettlementRequest.SettlementNotes" class="form-control"
                                      id="settlementNotes"
                                      rows="4" placeholder="Add any settlement remarks or processing notes..."></textarea>
                            <span asp-validation-for="SettlementRequest.SettlementNotes" class="text-danger"></span>
                            <small class="form-text text-muted">
                                This will be recorded as the official settlement record.
                            </small>
                        </div>

                        <!-- Real-time Validation Status -->
                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h6 class="card-title mb-0">
                                    <i class="fas fa-clipboard-check me-1"></i>Validation Status
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="validation-status">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fas fa-circle text-danger me-2" id="paymentRefStatus"></i>
                                        <span>Payment reference required</span>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-circle text-danger me-2" id="notesStatus"></i>
                                        <span>Settlement notes required</span>
                                    </div>
                                </div>
                                <div class="progress mt-2" style="height: 6px;">
                                    <div id="validationProgress" class="progress-bar" style="width: 0%"></div>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Important:</strong> Once settled, this claim cannot be modified.
                            The payment will be processed for <strong>R @Model.Claim.TotalAmount.ToString("N2")</strong>.
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg" id="confirmBtn" disabled>
                                <i class="fas fa-check-circle me-2"></i>Confirm Settlement
                            </button>
                            <a href="@Url.Action("SettlementQueue")" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .validation-status .fa-circle {
            font-size: 0.8em;
        }

        .validation-status .text-success {
            color: #198754 !important;
        }

        .validation-status .text-danger {
            color: #dc3545 !important;
        }

        .validation-status .text-warning {
            color: #ffc107 !important;
        }

        #confirmBtn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('settlementForm');
            const paymentRefInput = document.getElementById('paymentReference');
            const notesInput = document.getElementById('settlementNotes');
            const confirmBtn = document.getElementById('confirmBtn');
            const paymentRefStatus = document.getElementById('paymentRefStatus');
            const notesStatus = document.getElementById('notesStatus');
            const progressBar = document.getElementById('validationProgress');

            function updateValidationStatus() {
                const paymentRef = paymentRefInput.value.trim();
                const notes = notesInput.value.trim();

                let validCount = 0;
                const totalFields = 2;

                // Validate Payment Reference
                if (paymentRef.length >= 3) {
                    paymentRefStatus.className = 'fas fa-circle text-success me-2';
                    paymentRefStatus.parentElement.querySelector('span').textContent = 'Payment reference valid';
                    validCount++;
                } else if (paymentRef.length > 0) {
                    paymentRefStatus.className = 'fas fa-circle text-warning me-2';
                    paymentRefStatus.parentElement.querySelector('span').textContent = 'Payment reference too short';
                } else {
                    paymentRefStatus.className = 'fas fa-circle text-danger me-2';
                    paymentRefStatus.parentElement.querySelector('span').textContent = 'Payment reference required';
                }

                // Validate Settlement Notes
                if (notes.length >= 10) {
                    notesStatus.className = 'fas fa-circle text-success me-2';
                    notesStatus.parentElement.querySelector('span').textContent = 'Settlement notes valid';
                    validCount++;
                } else if (notes.length > 0) {
                    notesStatus.className = 'fas fa-circle text-warning me-2';
                    notesStatus.parentElement.querySelector('span').textContent = 'Settlement notes too short (min 10 chars)';
                } else {
                    notesStatus.className = 'fas fa-circle text-danger me-2';
                    notesStatus.parentElement.querySelector('span').textContent = 'Settlement notes required';
                }

                // Update progress bar
                const progress = (validCount / totalFields) * 100;
                progressBar.style.width = progress + '%';

                if (progress === 100) {
                    progressBar.className = 'progress-bar bg-success';
                    confirmBtn.disabled = false;
                } else if (progress >= 50) {
                    progressBar.className = 'progress-bar bg-warning';
                    confirmBtn.disabled = true;
                } else {
                    progressBar.className = 'progress-bar bg-danger';
                    confirmBtn.disabled = true;
                }
            }

            // Add event listeners for real-time validation
            paymentRefInput.addEventListener('input', updateValidationStatus);
            paymentRefInput.addEventListener('blur', updateValidationStatus);
            notesInput.addEventListener('input', updateValidationStatus);
            notesInput.addEventListener('blur', updateValidationStatus);

            // Form submission handler
            form.addEventListener('submit', function(e) {
                const paymentRef = paymentRefInput.value.trim();
                const notes = notesInput.value.trim();

                // Final validation
                if (!paymentRef || paymentRef.length < 3) {
                    e.preventDefault();
                    alert('Payment reference must be at least 3 characters long.');
                    paymentRefInput.focus();
                    return;
                }

                if (!notes || notes.length < 10) {
                    e.preventDefault();
                    alert('Settlement notes must be at least 10 characters long.');
                    notesInput.focus();
                    return;
                }

                // Confirmation dialog
                if (!confirm('Are you sure you want to settle this claim? This action cannot be undone.')) {
                    e.preventDefault();
                    return;
                }

                // Show loading state
                confirmBtn.disabled = true;
                confirmBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Processing Settlement...';
            });

            // Auto-generate payment reference if empty
            paymentRefInput.addEventListener('focus', function() {
                if (!this.value.trim()) {
                    const now = new Date();
                    const dateStr = now.toISOString().slice(0, 10).replace(/-/g, '');
                    const timeStr = now.getTime().toString().slice(-6);
                    this.value = `PAY-${dateStr}-${timeStr}`;
                    updateValidationStatus();
                }
            });

            // Initialize validation
            updateValidationStatus();

            // Auto-focus on first input
            paymentRefInput.focus();
        });
    </script>
}